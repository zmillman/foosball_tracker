= form_for @user, :html => {:class => 'stacked'} do |f| 
  - if @user.errors.any? 
    #error_explanation
      %h2 #{pluralize(@user.errors.count, "error")} prohibited this user from being saved:

      %ul
        - @user.errors.full_messages.each do |msg| 
          %li= msg 
   
  .field
    = f.label :email
    = f.text_field :email
    
  .field
    = f.label :password
    = f.text_field :password 
  
  .field
    = f.submit 'Sign Up'
  